{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@share/*": ["./electron/share/*"],
            "@preload/*": ["./electron/preload/*"]
        }
    },
    "include": ["src", "electron/share", "electron/preload"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
